<resources>
<!--  Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

<!--  fonts  -->
    <style name="h1Gray" parent="TextAppearance.AppCompat.Medium">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">13sp</item>
        <item name="color">@color/colorGray</item>
    </style>

    <style name="aGray" parent="h1Gray">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="headerDefault">
        <item name="color">@color/color</item>
        <item name="backgroundColor">@color/headerBackgroundColor</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:paddingStart">30dp</item>
    </style>

    <style name="contentDefault">
        <item name="android:padding">20dp</item>
        <item name="android:paddingStart">40dp</item>
    </style>

    <style name="h1">
        <item name="fontFamily">sans-serif</item>
        <item name="color">@color/color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="h2" parent="h1">
        <item name="android:padding">0dp</item>
        <item name="android:paddingStart">40dp</item>
    </style>

    <style name="paragraph">
        <item name="fontFamily">sans-serif</item>
        <item name="color">@color/color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="paragraph.link">
        <item name="color">@color/linkColor</item>
    </style>

    <style name="code">
        <item name="backgroundColor">@color/colorPaleBlue</item>
        <item name="android:padding">10sp</item>
        <item name="android:textSize">10.2sp</item>
    </style>

</resources>