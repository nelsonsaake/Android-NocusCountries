<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="LandingTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="titleEnabled">true</item>
        <item name="android:textAppearance">@style/LandingText</item>
    </style>

    <style name="LandingText" parent="TextAppearance.AppCompat.Large">
        <item name="fontFamily">cursive</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>